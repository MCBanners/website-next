---
import Config from "../../config.mjs";

const siteVerificationId = Config.googleSiteVerificationId
const analyticsId = Config.googleAnalyticsId
---

<!-- Google Site Verification -->
{siteVerificationId && <meta name="google-site-verification" content={siteVerificationId} />}

<!-- Google Analytics -->
{analyticsId && <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${analyticsId}`} type="text/partytown"></script>

<script is:inline define:vars={{ analyticsId }} type="text/partytown">
  window.dataLayer = window.dataLayer || [];

  function gtag() {
    dataLayer.push(arguments);
  }
  
  gtag("js", new Date());
  gtag("config", analyticsId);
</script>}